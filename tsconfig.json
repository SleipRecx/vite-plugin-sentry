{
  "compilerOptions": {
    "module": "ES6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "typeRoots": [
      "@types/**",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "@types"
  ],
  "exclude": ["node_modules"]
}